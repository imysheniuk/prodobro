.container
  .col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4
    = form_for(@new, url: {action: 'create'}) do |f|
      .field.form-group
        = f.label :Title
        %br/
        = f.text_field :title, autocomplete: "off" , class: "form-control"
      .field.form-group
        = f.label :Description
        %br/
        = f.text_area :description, autocomplete: "off" , class: "form-control"
      .actions
        = f.submit "Create" , class: "btn btn-success"
    = link_to "Back", :back, class: "btn my-btn"